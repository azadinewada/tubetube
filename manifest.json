{
  "name": "TUBETUBE",
  "description": "bring Youtube comments to the screen.",
  "icons": {
      "128": "images/tubetube.png"
   },
  "version": "0.0.1",
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation", 
    "*://*/*" 
  ],

 "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch?*","*://www.youtube.com/watch?*"],
      "js": ["script.js"]
    }
  ],
  "web_accessible_resources":[
    "images/*.png",
    "fonts/*.ttf",
    "fonts/*.otf"
    ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "TUBETUBE"
  },
  "manifest_version": 2
}